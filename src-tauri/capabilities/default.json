{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": [
    "*"
  ],
  "permissions": [
    "path:default",
    "event:default",
    "window:default",
    "window:allow-start-dragging",
    "window:allow-close",
    "window:allow-hide",
    "window:allow-center",
    "window:allow-show",
    "window:allow-maximize",
    "window:allow-minimize",
    "window:allow-destroy",
    "window:allow-is-focused",
    "window:allow-is-fullscreen",
    "window:allow-set-focus",
    "window:allow-set-position",
    "window:allow-scale-factor",
    "window:allow-unminimize",
    "window:allow-set-always-on-top",
    "window:allow-set-size",
    "window:allow-unmaximize",
    "app:default",
    "image:default",
    "resources:default",
    "menu:default",
    "tray:default",
    "tray:allow-new",
    "tray:allow-set-tooltip",
    "tray:allow-set-icon",
    "tray:allow-get-by-id",
    "shell:allow-open",
    "websocket:default",
    "http:default",
    "process:default",
    "process:allow-exit",
    "webview:default",
    "webview:allow-create-webview",
    "webview:allow-create-webview-window",
    "clipboard-manager:default",
    "clipboard-manager:allow-write-image",
    "dialog:allow-save",
    "upload:allow-download",
    "dialog:allow-open",
    "upload:allow-upload",
    "fs:default",
    "fs:write-all",
    "fs:allow-stat",
    "fs:write-all",
    "global-shortcut:default",
    "global-shortcut:allow-register",
    "global-shortcut:allow-is-registered",
    "global-shortcut:allow-unregister",
    "fs:default",
    "autostart:allow-enable",
    "autostart:allow-disable",
    "autostart:default",
    {
      "identifier": "http:default",
      "allow": [
        {
          "url": "http://**"
        },
        {
          "url": "https://**"
        },
        {
          "url": "http://*:*"
        },
        {
          "url": "https://*:*"
        }
      ]
    }
  ]
}